<h2>Lista de categorias</h2>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <button onclick=" location.href='/admin/categorias/edit/{{_id}}' " class='btn btn-success mt-3'>Editar categoria</button>
            <form action="/admin/categorias/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada</h4>
{{/each}}
<hr>
<button onclick=" location.href='/admin/categorias/add' " class="btn btn-success">Nova categoria</button>