<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">        
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p> 
        <button onclick="location.href='/postagem/{{slug}}'" class="btn btn-success">Leia mais</button> 
        <hr>
        <small>{{categoria.nome}}</small><br>
        <small>Data de Publicação: {{data}}</small>      
    </div>
</div>
{{else}}
<h5>Nenhuma postagem</h5>
{{/each}}